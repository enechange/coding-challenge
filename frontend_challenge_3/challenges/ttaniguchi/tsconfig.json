{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "include": [
    "./src/js/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}